#!/usr/bin/env python3
# This file is placed in the Public Domain.


"service"


import getpass


from rssbot.config  import Config
from rssbot.errors  import errors
from rssbot.main    import init, wrap
from rssbot.utils   import forever, pidfile, privileges
from rssbot.workdir import setwd


from rssbot.modules import all as modules


Cfg = Config()


initer = init


def main():
    "main"
    setwd()
    Cfg.mod = "cmd,err,irc,rss,thr"
    Cfg.user = getpass.getuser()
    privileges(Cfg.user)
    pidfile(Cfg.pidfile)
    initer(Cfg.mod, modules)
    forever()


if __name__ == "__main__":
    wrap(main)
    errors()
