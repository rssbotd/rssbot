#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0413


"service"


import getpass


from rssbot.config  import Config


Cfg = Config()
Cfg.mod = "cmd,err,irc,rss,thr"
Cfg.user = getpass.getuser()


from rssbot.errors  import errors
from rssbot.main    import boot, init, wrap
from rssbot.modules import face
from rssbot.utils   import forever, pidfile, privileges


initer = init


def main():
    "main"
    boot()
    privileges(Cfg.user)
    pidfile(Cfg.pidfile)
    initer(Cfg.mod, face)
    forever()


if __name__ == "__main__":
    wrap(main)
    errors()
