#!/usr/bin/env python3
# This file is in the Public Domain.


"check basics"


import os
import sys


IGNORE = []
NAMES = ["tob", "tobot"]


def ignore(txt):
    for ign in IGNORE:
        if ign in txt:
            return True
    return False


def popen(txt):
    for line in os.popen(txt).readlines():
        if ignore(line):
             continue
        print(line.rstrip())
        sys.stdout.flush()


def main():
    for NAME in NAMES:
        popen(f'grep -R "print(" {NAME}/*.py')
        popen(f'grep -R "__import__" {NAME}/*.py')
        popen(f'grep -R "importlib" {NAME}/*.py')
        popen(f'grep -R "import os" {NAME}/*.py')
        popen(f'grep -R "import sys" {NAME}/*.py')
        popen(f'grep -R "import inspect" {NAME}/*.py')
        popen(f'grep -R "getpass" {NAME}/*.py')
        popen(f'grep -R "pathlib" {NAME}/*.py')
        popen(f'grep -R {NAME} {NAME}')


if __name__ == "__main__":
    main()
