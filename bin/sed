#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=W1401,W0632


"replace"


import os
import sys


def popen(txt):
    """ run command in popen """
    for line in os.popen(txt).readlines():
        print(line.rstrip())
        sys.stdout.flush()

try:
    arg1, arg2 = sys.argv[1:3]
    popen(f"find ./ -type f -exec sed -i -e 's/{arg1}/{arg2}/g' {{}} \;")
except IndexError:
    print("sed <from> <to>")
    sys.exit(0)
